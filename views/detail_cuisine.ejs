<%- include("navbar") %>

<div id="detail_cuisine_body">
    <h1>
      <%= heading %> cuisine
    </h1>

    <div id="grid-layout">
      <% content.forEach((e)=> { %>
        <div class="content flex">

            <div class="detail_cuisine_image">
              <img class="detail_cuisine_img" src="<%=   e.image %>" alt="" />
            </div>

            <h3 class="detail_cuisine_heading">
              <%= e.title %>
            </h3>

            <div class="detail_cuisine_CTA flex">
            <a class="learn_more button" href="/recipe/target_recipe" value="<%= e.id %>" data-value="<%= e.title %>" target="_blank"> let's make it </a>
            </div>
                   
        </div>
      <% }) %>
    </div>
        <script type='text/javascript' src ='/public/index.js'></script>
</div>